{
  "name": "matrix-os",
  "version": "0.2.2",
  "description": "Core of the device layer for AdMobilize Matrix devices. Includes global component, npm install -g matrix-cli",
  "main": "app.js",
  "repository": "https://bitbucket.org/admobilize/admatrix",
  "scripts": {
    "start": "NODE_ENV=dev DEBUG=*,-engine* nodemon --watch lib --watch config",
    "test": "mocha test/_runner.js",
    "pr": "open https://bitbucket.org/admobilize/admatrix/pull-request/new",
    "deploy-prep": "rm -r db/pending.db node_modules/admatrix-node-sdk node_modules/admobilize-eventfilter-sdk node_modules/matrix-monitor-sensor",
    "deploy-image": "find apps -name '*.matrix' ! -name 'base.matrix' -type d -exec rm -r {} +; docker build --no-cache -t admobilize/matrix-os .;docker push admobilize/matrix-os",
    "local-setup": "cd node_modules;ln -s ../../matrix-firebase ./matrix-firebase; ln -s ../../matrix-app-config-helper ./matrix-app-config-helper;ln -s ../../admatrix-node-sdk ./admatrix-node-sdk cd .."
  },
  "author": "Sean Canton <sean.canton@admobilize.com>",
  "contributors": [
    "Sean Canton <sean.canton@admobilize.com>"
  ],
  "license": "ISC",
  "dependencies": {
    "admatrix-node-sdk": "https://bitbucket.org/admobilize/admobilize-node-sdk.git",
    "admobilize-eventfilter-sdk": "https://bitbucket.org/admobilize/matrix-eventfilter-sdk.git",
    "async": "^1.4.0",
    "chai": "^3.2.0",
    "colors": "^1.1.2",
    "commander": "^2.8.1",
    "debug": "^2.2.0",
    "df": "^1.1.1",
    "engine.io-client": "^1.5.4",
    "firebase": "^2.4.1",
    "fs-extra": "^0.22.1",
    "getmac": "^1.0.7",
    "intern": "^3.0.6",
    "js-beautify": "^1.5.10",
    "jsonwebtoken": "^5.7.0",
    "line-by-line": "^0.1.3",
    "lodash": "^3.10.0",
    "loudness": "^0.2.2",
    "matrix-firebase": "git+ssh://git@github.com/matrix-io/matrix-firebase.git",
    "matrix-monitor-sensor": "https://bitbucket.org/admobilize/matrix-monitor-sensor.git",
    "matrix-test-monitor-sensor": "^0.1.1",
    "mocha": "^2.3.4",
    "nedb": "https://github.com/matrix-io/nedb/tarball/master",
    "node-record-lpcm16": "^0.1.4",
    "npm-registry": "^0.1.13",
    "omxctrl": "^0.1.2",
    "portfinder": "^0.4.0",
    "ps-tree": "^1.0.0",
    "request": "^2.61.0",
    "rimraf": "^2.5.0",
    "should": "^7.0.2",
    "socket.io": "^1.3.6",
    "socket.io-client": "^1.3.6",
    "tar": "^2.2.0",
    "unzip": "^0.1.11",
    "winston": "^1.0.1",
    "winston-logentries": "^1.0.1"
  }
}
